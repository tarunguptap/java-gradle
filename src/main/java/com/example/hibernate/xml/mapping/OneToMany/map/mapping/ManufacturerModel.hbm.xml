<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- 
	$Id: ManufacturerModel.hbm.xml 433 2005-09-21 18:43:01Z Andrew Berman $
-->
<hibernate-mapping>
	<typedef name="modelAttributeType"
		class="commonutil.userType.EnumUserType">
		<param name="enumClassName">
			HibernateMappingXML.OneToManyMapTest.com.enums.ModelAttributeType
		</param>
	</typedef>
	<class name="HibernateMappingXML.OneToManyMapTest.com.model.ManufacturerModel" dynamic-insert="true" 
      dynamic-update="true" table="ref_manufacturermodel">
		<id name="id" column="manufacturermodelid" type="long" unsaved-value="-1">
          <generator class="hilo"/></id>
		<version name="version" column="version" type="java.lang.Integer" unsaved-value="null" />
	 	<property name="description" type="java.lang.String" column="description" insert="true" update="true"/>
		<property name="modelNumber" type="java.lang.String" update="true" insert="true" column="modelnumber" not-null="true" />
		<property name="active" type="java.lang.Boolean" not-null="true" update="true" insert="true" column="active" />
		<map name="modelAttributes" lazy="true" inverse="true" cascade="all, delete-orphan" >
			<key column="manufacturermodelid" not-null="true" update="true"/>
			<map-key column="attributename" type="modelAttributeType"/>
			<one-to-many class="HibernateMappingXML.OneToManyMapTest.com.model.ModelAttribute" />
		</map>
		<map name="modelAttributeTest" lazy="true" inverse="true" cascade="all, delete-orphan" >
			<key column="manufacturermodelid" not-null="true" update="true"/>
			<map-key column="attributename" type="modelAttributeType"/>
			<element column="attributevalue" type="java.lang.String"/>
		</map> 
		<property name="recycle" type="java.lang.Boolean" column="recycle" />
		<property name="destination" type="java.lang.String" column="destination" />		
	</class>	
	<class name="HibernateMappingXML.OneToManyMapTest.com.model.ModelAttribute" dynamic-insert="true" dynamic-update="true"
		
		table="ref_modelattribute">
		<id name="id" column="modelattributeid" type="long"
			unsaved-value="-1">
			<generator class="hilo">
                <param name="property">manufacturerModel</param>
            </generator>
		</id>
		<version name="version" column="version"
			type="java.lang.Integer" unsaved-value="null" />
		
		<property name="modelAttributeType" update="true" insert="true"
			column="modelattributetype">
			<type name="commonutil.userType.EnumUserType">
				<param name="enumClassName">
					HibernateMappingXML.OneToManyMapTest.com.enums.ModelAttributeType
				</param>
			</type>
		</property>
			
		<property name="value"
			type="java.lang.String" column="attributevalue" />
		<many-to-one name="manufacturerModel" class="HibernateMappingXML.OneToManyMapTest.com.model.ManufacturerModel" column="manufacturermodelid" /> 
			
	</class>
</hibernate-mapping>
